%html
  %head
    %title="#{AppConfig.project} v.#{Lipsiadmin::VERSION::STRING}"
    =stylesheet_link_tag :backend
  %body
    #loading-mask
    #loading
      .loading-indicator
        =image_tag("backend/logo-loader.png") + "Loading..."
    / include everything after the loading indicator
    =javascript_include_tag :defaults, :ext, "backend.js?small=#{params[:small].to_i}"
    -unless params[:small]
      #header
        #logo=link_to AppConfig.project, backend_path
        #logout=link_to "Logout #{current_account.email}", backend_session_path(1), :method => :delete

    %iframe{ :id => "ajax-iframe", :name => "ajax-iframe" }
    %form{ :id => "history-form", :class => "x-hidden" }
      =hidden_field_tag "x-history-field"
      %iframe{ :id => "x-history-frame" }